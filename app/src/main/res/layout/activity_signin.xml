<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/sign_bg"
    tools:context="appjam.themanual.SignupActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="80dp"
    android:layout_marginBottom="40dp"
    android:layout_marginLeft="22dp"
    android:layout_marginRight="22dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:textColor="#ffffff"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="-20sp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:text="로그인"
        />

    <EditText
        android:id="@+id/edittext_signin_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColorHint="#ffffff"
        android:textSize="16sp"
        android:textColor="#80ffffff"
        android:lineSpacingExtra="4sp"
        android:layout_marginTop="57dp"
        android:hint="아이디를 입력하세요."
        />

    <EditText
        android:id="@+id/edittext_signin_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColorHint="#ffffff"
        android:textSize="16sp"
        android:textColor="#80ffffff"
        android:lineSpacingExtra="4sp"
        android:layout_marginTop="17dp"
        android:hint="비밀번호를 입력하세요."
        />

    <Button
        android:id="@+id/btn_signin"
        android:layout_marginTop="44dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="19dp"
        android:paddingBottom="18dp"
        android:text="로그인"
        android:textStyle="bold"
        android:textColor="#5887f9"
        android:textSize="12sp"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/btn_sign"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="18dp">

        <TextView
            android:id="@+id/textview_signup_q"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정이 없으신가요?"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textview_signin_tosignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="회원가입"
            android:textSize="12sp"
            android:textStyle="bold"  />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="62dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >

        <View
            android:layout_width="132dp"
            android:layout_height="1dp"
            android:background="@color/line_sign"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:lineSpacingExtra="4sp"
            android:layout_gravity="center_vertical"
            android:text="또는" />

        <View
            android:layout_width="132dp"
            android:layout_height="1dp"
            android:background="@color/line_sign"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_signup"
        android:layout_marginTop="26dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="19dp"
        android:paddingBottom="18dp"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="4sp"
        android:textStyle="bold"
        android:text="페이스북 로그인"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/btn_out"
        />
</LinearLayout>
</LinearLayout>
