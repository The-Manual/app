<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageview_manual_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="fill"
        android:src="@drawable/splash" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        >

        <TextView
            android:id="@+id/textview_manual_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:lineSpacingExtra="4sp"
            android:text="만식이 커플"
            android:paddingBottom="10dp"
            android:layout_gravity="left|bottom"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/ic_person"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="@+id/textview_manual_person"
            android:paddingRight="10dp"
            android:src="@drawable/ic_person"
            android:background="@android:color/transparent"
            />
        <TextView
            android:id="@+id/textview_manual_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#99ffffff"
            android:lineSpacingExtra="4sp"
            app:layout_constraintTop_toBottomOf="@id/textview_manual_title"
            app:layout_constraintLeft_toRightOf="@+id/ic_person"
            app:layout_constraintBottom_toBottomOf="@id/ic_person"
            android:text="3명"
            />
    </android.support.constraint.ConstraintLayout>

    <ImageButton
        android:id="@+id/ic_formove"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:padding="5pt"
        android:scaleType="centerInside"
        android:src="@drawable/ic_dehaze"
        android:layout_gravity="right|bottom"
        android:layout_margin="20dp"
        />

</FrameLayout>