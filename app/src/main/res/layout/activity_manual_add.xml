<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ManualActivity"
    android:background="#ffffff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/imagebutton_manual_backarrow"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:padding="5pt"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back_arrow"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5pt"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#4c5264"
            android:gravity="center_vertical"
            android:lineSpacingExtra="3sp"
            android:text="메뉴얼 추가"
            android:layout_weight="8"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#353a50"
            android:lineSpacingExtra="6sp"
            android:textStyle="bold"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="10dp"
            android:text="제목"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="텍스트를 입력하세요"
            android:background="@drawable/custom_edittext"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#353a50"
            android:lineSpacingExtra="6sp"
            android:textStyle="bold"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="10dp"
            android:text="사용자 초대"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="초대"
            android:background="@drawable/custom_btn"
            />


        <LinearLayout
            android:layout_marginTop="62dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            >

            <View
                android:layout_width="132dp"
                android:layout_height="1dp"
                android:background="#404c5264"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#4c5264"
                android:lineSpacingExtra="4sp"
                android:layout_gravity="center_vertical"
                android:text="초대된 사람" />

            <View
                android:layout_width="132dp"
                android:layout_height="1dp"
                android:background="#404c5264"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/manualadd_recycler_view"
            android:layout_weight="8"
            app:layoutManager="LinearLayoutManager"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
    <Button
        android:id="@+id/btn_signupemail_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_gradient"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="4sp"
        android:textStyle="bold"
        android:text="확인"/>
</LinearLayout>
